<% include ../partials/header %>

<div class="col-lg-6 offset-3">
    <form action="/posts" method="POST" enctype="multipart/form-data" class="bg-light p-3 rounded shadow-sm">
        <h5 class="mb-3"><u>Add Post</u></h5>
            <div class="form-group">
                <label>Title</label>
                <input type="text" class="form-control" placeholder="Enter Title" name="post_title">
            </div>
            <div class="input-group mb-3">
				<div class="input-group-prepend">
					<span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
					</div>
					<div class="custom-file">
						<input type="file" class="custom-file-input" id="fileId" name="post_image">
						<label class="custom-file-label" for="fileId">Choose file</label>
				</div>
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea class="form-control" placeholder="Enter Description" name="post_description"></textarea>
            </div>
        <button type="submit" class="btn btn-dark btn-sm">Submit</button>
    </form>
</div>
<% include ../partials/footer %>